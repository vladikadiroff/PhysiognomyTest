<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        android:id="@+id/item_shop_container"
        style="@style/Card.Store"
        android:layout_margin="@dimen/recycler_item_margin"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/card_store_item_padding"
            android:gravity="center">

        <ImageView
                style="@style/ImageViewSocialNetwork"
                android:layout_marginBottom="@dimen/card_store_item_margin"
                android:background="@drawable/header_bg"
                android:src="@drawable/splash_logo"/>

        <TextView
                style="@style/Text.Header.CardStore"
                android:id="@+id/textStoreItem"
                android:layout_margin="@dimen/card_store_item_margin"
                tools:text="Item Name"/>

        <View
                style="@style/Divider"/>

        <TextView
                style="@style/Text.Normal"
                android:id="@+id/textStoreItemDescription"
                android:layout_marginTop="@dimen/card_store_item_margin"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                tools:text="Another Information about this Card" />



        <TextView
                style="@style/Text.Normal"
                android:id="@+id/textStorePriceItem"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/card_store_item_margin"
                tools:text="$50"
                />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
