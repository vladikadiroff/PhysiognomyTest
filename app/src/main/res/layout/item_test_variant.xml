<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_test_variant_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/recycler_item_margin"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/imageTestVariants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/splash_logo_2" />

        <TextView
                android:id="@+id/textTestVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="bottom"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="@color/colorIcon"
                tools:text="facial_feature" />
    </FrameLayout>

</com.google.android.material.card.MaterialCardView >

