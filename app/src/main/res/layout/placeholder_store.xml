<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        style="@style/Card.Store"
        android:layout_margin="@dimen/recycler_item_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/card_store_item_padding"
            android:gravity="center">

        <View
                style="@style/ImageViewSocialNetwork"
                android:layout_marginBottom="@dimen/card_store_item_margin"
                android:background="@drawable/placeholder_circle"/>

        <View
                style="@style/PlaceHolder.Header"
                android:layout_margin="@dimen/card_store_item_margin"/>

        <View
                style="@style/Divider"
                android:layout_margin="@dimen/card_store_item_margin"
                android:background="@color/colorPlaceholder"/>

        <View
                style="@style/PlaceHolder.Text"
                android:layout_marginTop="@dimen/card_store_item_margin"/>

        <View
                style="@style/PlaceHolder.Text"
                android:layout_marginTop="@dimen/card_store_item_margin"
                android:layout_marginBottom="@dimen/card_store_item_margin"/>

        <View
                style="@style/PlaceHolder.Header"
                android:layout_width="30dp"
                android:layout_margin="@dimen/card_store_item_margin"
                />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
