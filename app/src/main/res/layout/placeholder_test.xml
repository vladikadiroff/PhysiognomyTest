<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView style="@style/Card.Test"
        android:layout_margin="@dimen/recycler_item_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_test_type_padding"
                android:gravity="center">


            <View
                    style="@style/ImageViewMedium"
                    android:layout_margin="@dimen/card_test_type_margin"
                    android:background="@drawable/placeholder_circle"
                    />


            <View
                    style="@style/PlaceHolder.Header"
                    android:layout_margin="@dimen/card_test_type_margin"
                    />

            <View
                    style="@style/Divider"
                    android:layout_marginBottom="@dimen/card_test_type_margin"/>


            <View
                    style="@style/PlaceHolder.Text"/>

            <View
                    style="@style/PlaceHolder.Text"
                    android:layout_marginTop="@dimen/card_test_type_margin" />

            <View
                    style="@style/PlaceHolder.Text"
                    android:layout_marginTop="@dimen/card_test_type_margin" />


            <View
                    style="@style/PlaceHolder.Header"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/card_test_type_margin"
                    />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>





